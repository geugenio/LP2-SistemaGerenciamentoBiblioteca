<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #f0f2f5;" prefWidth="400.0" prefHeight="400.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lp2.bibliotecaapi.controller.CadastroLivroController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Novo Livro" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <VBox spacing="5.0">
        <Label text="Título:" />
        <TextField fx:id="txtTitulo" promptText="Ex: Diário de um Banana" />
    </VBox>

    <VBox spacing="5.0">
        <Label text="Autor:" />
        <TextField fx:id="txtAutor" promptText="Ex: Machado de Assis" />
    </VBox>

    <VBox spacing="5.0">
        <Label text="Ano:" />
        <TextField fx:id="txtAno" promptText="Ex: 1500" />
    </VBox>

    <VBox prefHeight="10.0" />

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button text="Confirmar" onAction="#salvar" 
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
    
        <Button text="Cancelar" onAction="#cancelar" 
                style="-fx-background-color: #e62f22; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="lblMensagem" textFill="RED" />

</VBox>